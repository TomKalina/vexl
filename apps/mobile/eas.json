{
  "cli": {
    "version": ">=3.7.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "image": "ubuntu-18.04-jdk-11-ndk-r19c"
      }
    },
    "development-simulator": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "image": "ubuntu-18.04-jdk-11-ndk-r19c"
      }
    },
    "preview": {
      "distribution": "internal",
      "developmentClient": false,
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "image": "ubuntu-18.04-jdk-11-ndk-r19c"
      }
    },
    "stage": {
      "android": {
        "image": "ubuntu-18.04-jdk-11-ndk-r19c"
      },
      "env": {
        "ENV_PRESET": "stage"
      }
    },
    "production": {
      "android": {
        "image": "ubuntu-18.04-jdk-11-ndk-r19c"
      },
      "env": {
        "ENV_PRESET": "prod"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "internal",
        "changesNotSentForReview": true,
        "serviceAccountKeyPath": "certs/android/service-account.json"
      },
      "ios": {
        "bundleIdentifier": "it.vexl.next"
      }
    }
  }
}
