{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Expo",
  "extends": "@vexl-next/ts-config/base.json",
  "compilerOptions": {
    "jsx": "react-native",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "strictNullChecks": true,
    "paths": {
      "testUtils": [
        "./src/testUtils"
      ]
    },
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
